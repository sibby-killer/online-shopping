<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9E4D9"
    tools:context=".Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock Your Glow! Sign in to Shop."
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="#623A2C"
            android:layout_marginTop="16sp"
            android:textStyle="bold">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <EditText
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Enter Firstname"
        android:padding="16dp"
       />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Enter Lasttname"
            android:padding="16dp"
           />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Enter Email"
            android:padding="16dp"
            />
        <EditText
            android:id="@+id/phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Phonenumber"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:padding="16dp"
            />
        <EditText
            android:id="@+id/Country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Country"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:padding="16dp"
            />
        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Home Address"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:padding="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="240dp"
        >
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Cancel"
            android:textSize="24dp"
            android:textColorHint="#F9E4D9"
            android:backgroundTint="#623A2C"
            android:padding="16dp"
            android:layout_marginLeft="32dp"
            >
        </Button>
        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Submit"
            android:textSize="24dp"
            android:textColorHint="#F9E4D9"
            android:backgroundTint="#623A2C"
            android:padding="16dp"
            android:layout_marginLeft="114dp"
            android:layout_marginRight="16dp">
        </Button>
    </LinearLayout>

</LinearLayout>